<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    tools:context=".HomeFragment"
    >


   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/textviewWelcomeUser"
       android:layout_marginTop="10dp"
       android:layout_alignParentTop="true"
       android:layout_centerHorizontal="true"
       android:text="Welcome back, {name}!"
       android:textSize="24dp"
       android:textAlignment="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/app_intro"
        android:layout_marginTop="10dp"
        android:layout_below="@id/textviewWelcomeUser"
        android:textAlignment="center"
        android:text="@string/app_welcome"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/stats_header"
        android:layout_below="@id/app_intro"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="@string/stats_header"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/stats_header"
        android:id="@+id/pinsUploadedHeader"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="@string/stats_pinsUploadedHeader"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pinsUploadedHeader"
        android:id="@+id/textview_pinsUploaded"
        android:textAlignment="center"
        android:text=""/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@id/textview_pinsUploaded"
        android:id="@+id/accountCreatedHeader"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="@string/stats_AccountCreatedHeader"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/accountCreatedHeader"
        android:id="@+id/textview_accountCreated"
        android:textAlignment="center"
        android:text=""/>



</RelativeLayout>